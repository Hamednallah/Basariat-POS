<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>

<BorderPane fx:id="diagnosticHistoryRootPane" prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.basariatpos.ui.controller.OpticalDiagnosticHistoryDialogController">
    <stylesheets>
        <String fx:value="@../style/basariat-pos.css" />
    </stylesheets>
    <top>
        <VBox spacing="5.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label fx:id="patientNameLabel" styleClass="dialog-title-secondary" text="Patient Name Placeholder"/>
                <Label styleClass="dialog-title" text="%opticaldiagnostics.history.title" />
                <!-- The {0} in title will be handled by controller if needed, or patientNameLabel suffices -->
            </children>
        </VBox>
    </top>
    <center>
        <TableView fx:id="diagnosticsTable" prefHeight="300.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="dateColumn" prefWidth="100.0" text="%opticaldiagnostics.table.date" />
                <TableColumn fx:id="odSphColumn" prefWidth="70.0" text="%opticaldiagnostics.table.odSph" />
                <TableColumn fx:id="odCylColumn" prefWidth="70.0" text="%opticaldiagnostics.table.odCyl" />
                <TableColumn fx:id="odAxisColumn" prefWidth="70.0" text="%opticaldiagnostics.table.odAxis" />
                <TableColumn fx:id="osSphColumn" prefWidth="70.0" text="%opticaldiagnostics.table.osSph" />
                <TableColumn fx:id="osCylColumn" prefWidth="70.0" text="%opticaldiagnostics.table.osCyl" />
                <TableColumn fx:id="osAxisColumn" prefWidth="70.0" text="%opticaldiagnostics.table.osAxis" />
                <TableColumn fx:id="odAddColumn" prefWidth="70.0" text="%opticaldiagnostics.table.odAdd" />
                <TableColumn fx:id="osAddColumn" prefWidth="70.0" text="%opticaldiagnostics.table.osAdd" />
                <TableColumn fx:id="ipdColumn" prefWidth="60.0" text="%opticaldiagnostics.table.ipd" />
                <TableColumn fx:id="isCLRxColumn" prefWidth="70.0" text="%opticaldiagnostics.table.isCLRx" />
                <TableColumn fx:id="remarksColumn" prefWidth="150.0" text="%opticaldiagnostics.table.remarks" />
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            <BorderPane.margin>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="dialog-button-bar">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Button fx:id="addDiagnosticButton" mnemonicParsing="false" onAction="#handleAddDiagnosticButtonAction" text="%opticaldiagnostics.button.add" styleClass="button-primary"/>
                <Button fx:id="editDiagnosticButton" mnemonicParsing="false" onAction="#handleEditDiagnosticButtonAction" text="%opticaldiagnostics.button.edit" styleClass="button-secondary" disable="true"/>
                <Button fx:id="deleteDiagnosticButton" mnemonicParsing="false" onAction="#handleDeleteDiagnosticButtonAction" text="%opticaldiagnostics.button.delete" styleClass="button-danger" disable="true"/>
                <HBox HBox.hgrow="ALWAYS" /> <!-- Spacer -->
                <Button fx:id="closeButton" mnemonicParsing="false" onAction="#handleCloseButtonAction" text="%opticaldiagnostics.button.close" styleClass="button-secondary" cancelButton="true"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
