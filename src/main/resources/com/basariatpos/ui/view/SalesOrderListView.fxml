<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>

<BorderPane fx:id="salesOrderListRootPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.basariatpos.ui.controller.SalesOrderListController">
    <stylesheets>
        <String fx:value="@../style/basariat-pos.css" />
    </stylesheets>
    <top>
        <VBox>
            <ToolBar styleClass="filter-toolbar">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="%salesorder.list.filter.fromDate" styleClass="filter-label"/>
                    <DatePicker fx:id="fromDateFilter" styleClass="filter-datepicker"/>
                    <Label text="%salesorder.list.filter.toDate" styleClass="filter-label"/>
                    <DatePicker fx:id="toDateFilter" styleClass="filter-datepicker"/>
                    <Label text="%salesorder.list.filter.status" styleClass="filter-label"/>
                    <ComboBox fx:id="statusFilterCombo" styleClass="filter-combo"/>
                    <Label text="%salesorder.list.filter.patientSearch" styleClass="filter-label"/>
                    <TextField fx:id="patientSearchField" styleClass="filter-textfield" promptText="%salesorder.list.filter.patientSearch"/>
                    <Button fx:id="searchOrdersButton" text="%button.search" onAction="#handleSearchOrdersAction" styleClass="toolbar-button-primary"/>
                    <Button fx:id="clearFiltersButton" text="%button.clear" onAction="#handleClearFiltersAction" styleClass="toolbar-button-secondary"/>
                </HBox>
            </ToolBar>
        </VBox>
    </top>
    <center>
        <TableView fx:id="salesOrdersTable" styleClass="table-view-standard">
            <columns>
                <TableColumn fx:id="idColumn" text="%salesorder.list.header.id" prefWidth="80.0"/>
                <TableColumn fx:id="dateColumn" text="%salesorder.list.header.date" prefWidth="150.0"/>
                <TableColumn fx:id="patientColumn" text="%salesorder.list.header.patient" prefWidth="200.0"/>
                <TableColumn fx:id="statusColumn" text="%salesorder.list.header.status" prefWidth="100.0"/>
                <TableColumn fx:id="totalColumn" text="%salesorder.list.header.total" prefWidth="120.0" styleClass="table-column-amount"/>
                <TableColumn fx:id="balanceDueColumn" text="%salesorder.list.header.balanceDue" prefWidth="120.0" styleClass="table-column-amount"/>
            </columns>
            <BorderPane.margin>
                <Insets top="10.0" bottom="10.0" left="10.0" right="10.0"/>
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="action-button-bar">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Button fx:id="addOrderButton" text="%salesorder.button.addOrder" onAction="#handleAddOrderAction" styleClass="button-primary" prefWidth="120"/>
            <Button fx:id="viewEditOrderButton" text="%salesorder.button.viewEditOrder" onAction="#handleViewEditOrderAction" styleClass="button-secondary" prefWidth="150"/>
        </HBox>
    </bottom>
</BorderPane>
