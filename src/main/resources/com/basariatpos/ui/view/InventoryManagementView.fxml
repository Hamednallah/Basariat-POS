<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>

<BorderPane fx:id="inventoryManagementRootPane" prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.basariatpos.ui.controller.InventoryManagementController">
    <stylesheets>
        <String fx:value="@styles.css" />
    </stylesheets>
    <top>
        <VBox>
            <children>
                <Label styleClass="view-title" text="%inventoryitem.management.title" />
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="toolbar">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <Label text="%inventoryitem.label.filterByProduct" styleClass="form-label"/>
                        <ComboBox fx:id="productFilterComboBox" prefWidth="200.0" styleClass="form-input"/>
                        <TextField fx:id="searchField" promptText="%inventoryitem.label.searchPrompt" prefWidth="250.0" styleClass="form-input-search"/>
                        <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleFilterOrSearchAction" text="%product.button.search" styleClass="button-primary"/>
                        <Button fx:id="clearSearchButton" mnemonicParsing="false" onAction="#handleClearFiltersAction" text="%product.button.clearSearch" styleClass="button-secondary"/>
                        <CheckBox fx:id="lowStockOnlyCheckBox" mnemonicParsing="false" text="%inventoryitem.label.showLowStockOnly" onAction="#handleFilterOrSearchAction" styleClass="form-label"/>
                        <CheckBox fx:id="showInactiveCheckBox" mnemonicParsing="false" text="%inventoryitem.label.showInactiveItems" onAction="#handleFilterOrSearchAction" styleClass="form-label"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <TableView fx:id="inventoryItemsTable" prefHeight="400.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="productNameColumn" prefWidth="200.0" text="%inventoryitem.table.header.productName" />
                <TableColumn fx:id="specificNameEnColumn" prefWidth="150.0" text="%inventoryitem.table.header.specificNameEn" />
                <TableColumn fx:id="brandColumn" prefWidth="100.0" text="%inventoryitem.table.header.brand" />
                <TableColumn fx:id="attributesColumn" prefWidth="150.0" text="%inventoryitem.table.header.attributes" />
                <TableColumn fx:id="qohColumn" prefWidth="70.0" text="%inventoryitem.table.header.qoh" styleClass="table-column-number"/>
                <TableColumn fx:id="sellingPriceColumn" prefWidth="100.0" text="%inventoryitem.table.header.sellingPrice" styleClass="table-column-currency"/>
                <TableColumn fx:id="costPriceColumn" prefWidth="100.0" text="%inventoryitem.table.header.costPrice" styleClass="table-column-currency"/>
                <TableColumn fx:id="minStockColumn" prefWidth="80.0" text="%inventoryitem.table.header.minStock" styleClass="table-column-number"/>
                <TableColumn fx:id="unitColumn" prefWidth="80.0" text="%inventoryitem.table.header.unit" />
                <TableColumn fx:id="activeColumn" prefWidth="70.0" text="%inventoryitem.table.header.active" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="toolbar">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Button fx:id="addItemButton" mnemonicParsing="false" onAction="#handleAddInventoryItemButtonAction" text="%inventoryitem.button.add" styleClass="button-primary"/>
                <Button fx:id="editItemButton" mnemonicParsing="false" onAction="#handleEditInventoryItemButtonAction" text="%inventoryitem.button.edit" styleClass="button-secondary" disable="true"/>
                <Button fx:id="toggleActiveButton" mnemonicParsing="false" onAction="#handleToggleActiveButtonAction" text="%inventoryitem.button.toggleActive" styleClass="button-secondary" disable="true"/>
                <!-- Add Stock Adjustment Button later -->
            </children>
        </HBox>
    </bottom>
</BorderPane>
