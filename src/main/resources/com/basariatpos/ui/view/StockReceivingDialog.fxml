<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>

<BorderPane fx:id="stockReceivingDialogRootPane" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.basariatpos.ui.controller.StockReceivingDialogController">
    <stylesheets>
        <String fx:value="@../style/basariat-pos.css" />
    </stylesheets>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <top>
        <VBox spacing="5.0">
            <Label fx:id="dialogTitleLabel" styleClass="dialog-title" text="Receive Stock"/> <!-- Title set by controller -->
            <Label fx:id="poDetailsLabel" styleClass="dialog-subtitle" text="PO Details Placeholder"/>
             <padding><Insets bottom="10.0"/></padding>
        </VBox>
    </top>
    <center>
        <TableView fx:id="itemsToReceiveTable" editable="true" prefHeight="300.0">
            <columns>
                <TableColumn fx:id="itemNameColumn" prefWidth="250.0" text="%po.receive.label.item" editable="false"/>
                <TableColumn fx:id="qtyOrderedColumn" prefWidth="100.0" text="%po.receive.label.ordered" styleClass="table-column-number" editable="false"/>
                <TableColumn fx:id="qtyAlreadyReceivedColumn" prefWidth="120.0" text="%po.receive.label.alreadyReceived" styleClass="table-column-number" editable="false"/>
                <TableColumn fx:id="qtyRemainingColumn" prefWidth="100.0" text="Qty Remaining" styleClass="table-column-number" editable="false"/> <!-- Key this -->
                <TableColumn fx:id="qtyToReceiveNowColumn" prefWidth="150.0" text="%po.receive.label.qtyToReceive" styleClass="table-column-number"/>
                <TableColumn fx:id="newPricePerUnitColumn" prefWidth="150.0" text="%po.receive.label.newPricePerUnit" styleClass="table-column-currency"/>
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="dialog-button-bar">
            <padding><Insets top="15.0"/></padding>
            <Button fx:id="confirmReceptionButton" onAction="#handleConfirmReceptionButtonAction" text="%po.button.confirmReception" styleClass="button-primary" defaultButton="true"/>
            <Button fx:id="cancelButton" onAction="#handleCancelButtonAction" text="%dialog.button.cancel" styleClass="button-secondary" cancelButton="true"/>
        </HBox>
    </bottom>
</BorderPane>
