<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>

<BorderPane fx:id="productManagementRootPane" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.basariatpos.ui.controller.ProductManagementController">
    <stylesheets>
        <String fx:value="@../style/basariat-pos.css" />
    </stylesheets>
    <top>
        <VBox>
            <children>
                <Label styleClass="view-title" text="%product.management.title" />
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="toolbar">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <TextField fx:id="searchField" promptText="%product.label.searchPrompt" prefWidth="350.0" styleClass="form-input-search"/>
                        <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearchButtonAction" text="%product.button.search" styleClass="button-primary"/>
                        <Button fx:id="clearSearchButton" mnemonicParsing="false" onAction="#handleClearSearchButtonAction" text="%product.button.clearSearch" styleClass="button-secondary"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <TableView fx:id="productsTable" prefHeight="400.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="productCodeColumn" prefWidth="120.0" text="%product.table.header.code" />
                <TableColumn fx:id="productNameEnColumn" prefWidth="250.0" text="%product.table.header.nameEn" />
                <TableColumn fx:id="productNameArColumn" prefWidth="250.0" text="%product.table.header.nameAr" />
                <TableColumn fx:id="categoryColumn" prefWidth="150.0" text="%product.table.header.category" />
                <TableColumn fx:id="isServiceColumn" prefWidth="100.0" text="%product.table.header.isService" />
                <TableColumn fx:id="isStockItemColumn" prefWidth="100.0" text="%product.table.header.isStockItem" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="toolbar">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Button fx:id="addProductButton" mnemonicParsing="false" onAction="#handleAddProductButtonAction" text="%product.button.add" styleClass="button-primary"/>
                <Button fx:id="editProductButton" mnemonicParsing="false" onAction="#handleEditProductButtonAction" text="%product.button.edit" styleClass="button-secondary" disable="true"/>
                <Button fx:id="deleteProductButton" mnemonicParsing="false" onAction="#handleDeleteProductButtonAction" text="%product.button.delete" styleClass="button-danger" disable="true"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
