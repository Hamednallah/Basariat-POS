<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>

<VBox fx:id="stockAdjustmentRootPane" prefWidth="500.0" spacing="15.0" styleClass="dialog-container" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.basariatpos.ui.controller.StockAdjustmentDialogController">
    <stylesheets>
        <String fx:value="@../style/basariat-pos.css" />
    </stylesheets>
    <padding>
        <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
    </padding>

    <Label styleClass="dialog-title" text="%stockadjustment.dialog.title" />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" hgrow="NEVER" minWidth="10.0" prefWidth="180.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="280.0" />
        </columnConstraints>

        <Label text="%stockadjustment.label.item" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label-required"/>
        <ComboBox fx:id="itemComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="form-input" prefWidth="280.0"/>

        <Label text="%stockadjustment.label.currentQoh" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="form-label"/>
        <TextField fx:id="currentQohField" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="form-input-display" editable="false"/>

        <Label text="%stockadjustment.label.adjustmentQty" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="form-label-required"/>
        <TextField fx:id="adjustmentQuantityField" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="form-input-numeric" promptText="+10 or -5"/>

        <Label text="%stockadjustment.label.reason" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="form-label-required"/>
        <ComboBox fx:id="reasonComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="form-input" prefWidth="280.0"/>

        <Label fx:id="otherReasonLabel" text="%stockadjustment.label.otherReason" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="form-label" visible="false" managed="false"/>
        <TextArea fx:id="otherReasonArea" GridPane.columnIndex="1" GridPane.rowIndex="4" prefHeight="60.0" wrapText="true" styleClass="form-input" visible="false" managed="false"/>

        <rowConstraints>
            <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="0.0" vgrow="SOMETIMES" /> <!-- For otherReasonArea, allow collapse -->
        </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <children>
            <Button fx:id="submitButton" onAction="#handleSubmitAdjustmentButtonAction" text="%stockadjustment.button.submit" styleClass="form-button-primary" defaultButton="true" prefWidth="180"/>
            <Button fx:id="cancelButton" onAction="#handleCancelButtonAction" text="%dialog.button.cancel" styleClass="form-button-secondary" cancelButton="true" prefWidth="100"/>
        </children>
        <VBox.margin>
            <Insets top="15.0" />
        </VBox.margin>
    </HBox>
</VBox>
