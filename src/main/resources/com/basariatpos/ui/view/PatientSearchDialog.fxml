<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="patientSearchDialogRootPane" spacing="10.0" styleClass="dialog-container" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.basariatpos.ui.controller.PatientSearchDialogController">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>

    <Label text="%patientmanagement.label.searchPrompt" styleClass="dialog-prompt-label"/>

    <HBox spacing="10.0">
        <TextField fx:id="patientSearchInput" HBox.hgrow="ALWAYS" styleClass="form-input" promptText="%patientmanagement.label.searchPrompt"/>
        <Button fx:id="searchPatientBtn" text="%patientmanagement.button.search" onAction="#handleSearchPatientButtonAction" styleClass="form-button-standard"/>
    </HBox>

    <ListView fx:id="patientResultsList" prefHeight="250.0" styleClass="list-view-standard" VBox.vgrow="ALWAYS"/>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <padding><Insets top="10.0"/></padding>
        <Button fx:id="selectPatientButton" text="%button.select" onAction="#handleSelectPatientButtonAction" styleClass="button-primary" defaultButton="true" prefWidth="100"/>
        <Button fx:id="cancelSearchButton" text="%dialog.button.cancel" onAction="#handleCancelButtonAction" styleClass="button-secondary" cancelButton="true" prefWidth="100"/>
    </HBox>
</VBox>
