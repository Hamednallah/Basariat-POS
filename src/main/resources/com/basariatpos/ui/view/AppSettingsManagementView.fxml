<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>

<BorderPane fx:id="appSettingsManagementRootPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.basariatpos.ui.controller.AppSettingsManagementController">
    <stylesheets>
        <String fx:value="@../style/basariat-pos.css" />
    </stylesheets>
    <top>
        <VBox>
            <children>
                <Label styleClass="view-title" text="%appsettings.management.title" />
                <!-- No Add/Edit buttons here, editing is inline in the table -->
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <TableView fx:id="settingsTable" prefHeight="200.0" prefWidth="200.0" editable="true" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="keyColumn" prefWidth="200.0" text="%appsettings.table.header.key" editable="false"/>
                <TableColumn fx:id="valueColumn" prefWidth="300.0" text="%appsettings.table.header.value" editable="true"/>
                <TableColumn fx:id="descriptionColumn" prefWidth="300.0" text="%appsettings.table.header.description" editable="false"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
            </BorderPane.margin>
            <tooltip>
                <Tooltip text="%appsettings.tooltip.editValue"/>
            </tooltip>
        </TableView>
    </center>
    <!-- No bottom button bar needed as editing is inline -->
</BorderPane>
