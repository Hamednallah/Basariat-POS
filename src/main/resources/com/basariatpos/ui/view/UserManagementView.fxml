<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>

<BorderPane fx:id="userManagementRootPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.basariatpos.ui.controller.UserManagementController">
    <stylesheets>
        <String fx:value="@styles.css" />
    </stylesheets>
    <top>
        <VBox>
            <children>
                <Label styleClass="view-title" text="%usermanagement.title" />
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="toolbar">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <Button fx:id="addUserButton" mnemonicParsing="false" onAction="#handleAddUserButtonAction" text="%usermanagement.button.addUser" styleClass="button-primary"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <TableView fx:id="usersTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="usernameColumn" prefWidth="150.0" text="%usermanagement.table.header.username" />
                <TableColumn fx:id="fullNameColumn" prefWidth="200.0" text="%usermanagement.table.header.fullName" />
                <TableColumn fx:id="roleColumn" prefWidth="100.0" text="%usermanagement.table.header.role" />
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="%usermanagement.table.header.status" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="toolbar">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Button fx:id="editUserButton" mnemonicParsing="false" onAction="#handleEditUserButtonAction" text="%usermanagement.button.editUser" styleClass="button-secondary" disable="true"/>
                <Button fx:id="toggleActivityButton" mnemonicParsing="false" onAction="#handleToggleActivityButtonAction" text="%usermanagement.button.toggleActive" styleClass="button-secondary" disable="true"/>
                <Button fx:id="resetPasswordButton" mnemonicParsing="false" onAction="#handleResetPasswordButtonAction" text="%usermanagement.button.resetPassword" styleClass="button-warning" disable="true"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
