<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>

<BorderPane fx:id="patientManagementRootPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.basariatpos.ui.controller.PatientManagementController">
    <stylesheets>
        <String fx:value="@../style/basariat-pos.css" />
    </stylesheets>
    <top>
        <VBox>
            <children>
                <Label styleClass="view-title" text="%patientmanagement.title" />
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="toolbar">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <TextField fx:id="searchField" promptText="%patientmanagement.label.searchPrompt" prefWidth="300.0" styleClass="form-input-search"/>
                        <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearchButtonAction" text="%patientmanagement.button.search" styleClass="button-primary"/>
                        <Button fx:id="clearSearchButton" mnemonicParsing="false" onAction="#handleClearSearchButtonAction" text="%button.clear" styleClass="button-secondary"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <TableView fx:id="patientsTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="systemIdColumn" prefWidth="120.0" text="%patientmanagement.table.header.systemId" />
                <TableColumn fx:id="fullNameColumn" prefWidth="250.0" text="%patientmanagement.table.header.fullName" />
                <TableColumn fx:id="phoneNumberColumn" prefWidth="150.0" text="%patientmanagement.table.header.phoneNumber" />
                <TableColumn fx:id="whatsappConsentColumn" prefWidth="150.0" text="%patientmanagement.table.header.whatsappConsent" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="toolbar">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Button fx:id="addPatientButton" mnemonicParsing="false" onAction="#handleAddPatientButtonAction" text="%patientmanagement.button.addPatient" styleClass="button-primary"/>
                <Button fx:id="editPatientButton" mnemonicParsing="false" onAction="#handleEditPatientButtonAction" text="%patientmanagement.button.editPatient" styleClass="button-secondary" disable="true"/>
                <Button fx:id="viewDiagnosticsButton" mnemonicParsing="false" onAction="#handleViewDiagnosticsButtonAction" text="%patientmanagement.button.viewDiagnostics" styleClass="button-secondary" disable="true"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
