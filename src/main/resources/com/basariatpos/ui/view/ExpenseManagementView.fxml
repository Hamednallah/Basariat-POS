<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="expenseManagementPane" styleClass="view-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.basariatpos.ui.controller.ExpenseManagementController">
    <top>
        <VBox styleClass="view-header" spacing="10.0" BorderPane.alignment="CENTER">
            <Label text="%expensemanagement.title" styleClass="view-title" />
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="%expensemanagement.filter.fromDate" />
                <DatePicker fx:id="fromDateField" prefWidth="150.0"/>
                <Label text="%expensemanagement.filter.toDate" />
                <DatePicker fx:id="toDateField" prefWidth="150.0"/>
                <Label text="%expensemanagement.filter.category" />
                <ComboBox fx:id="categoryFilterCombo" prefWidth="200.0" />
                <Button fx:id="applyFilterButton" text="%expensemanagement.filter.button.apply" onAction="#handleApplyFilterAction" styleClass="primary-button-small" />
                <Button fx:id="clearFilterButton" text="%expensemanagement.filter.button.clear" onAction="#handleClearFilterAction" styleClass="secondary-button-small" />
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="expensesTable" styleClass="table-view-standard" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="dateColumn" prefWidth="100.0" text="%expensemanagement.table.header.date" />
                <TableColumn fx:id="categoryColumn" prefWidth="150.0" text="%expensemanagement.table.header.category" />
                <TableColumn fx:id="descriptionColumn" prefWidth="250.0" text="%expensemanagement.table.header.description" />
                <TableColumn fx:id="amountColumn" prefWidth="100.0" text="%expensemanagement.table.header.amount" styleClass="table-column-amount"/>
                <TableColumn fx:id="paymentMethodColumn" prefWidth="120.0" text="%expensemanagement.table.header.paymentMethod" />
                <TableColumn fx:id="bankNameColumn" prefWidth="150.0" text="%expensemanagement.table.header.bankName" />
                <TableColumn fx:id="transactionIdColumn" prefWidth="150.0" text="%expensemanagement.table.header.transactionId" />
                <TableColumn fx:id="recordedByColumn" prefWidth="150.0" text="%expensemanagement.table.header.recordedBy" />
                <TableColumn fx:id="shiftIdColumn" prefWidth="80.0" text="%expensemanagement.table.header.shiftId" styleClass="table-column-center"/>
            </columns>
            <BorderPane.margin>
                <Insets top="10.0" />
            </BorderPane.margin>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" bottom="5.0" />
            </padding>
            <Button fx:id="addExpenseButton" text="%expensemanagement.button.addExpense" onAction="#handleAddExpenseAction" styleClass="primary-button" />
        </HBox>
    </bottom>
</BorderPane>
