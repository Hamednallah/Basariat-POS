<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="abandonOrderDialogPane" prefHeight="450.0" prefWidth="650.0" styleClass="dialog-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.basariatpos.ui.controller.AbandonOrderDialogController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <top>
        <VBox spacing="5.0" BorderPane.alignment="CENTER_LEFT">
            <BorderPane.margin>
                <Insets bottom="10.0" />
            </BorderPane.margin>
            <Label fx:id="dialogTitleLabel" text="%abandonorder.dialog.title" styleClass="dialog-header-title">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <Label fx:id="orderInfoLabel" text="Order SO-00000 | Patient: John Doe | Total: 0.00" styleClass="info-label-small-header"/>
        </VBox>
    </top>
    <center>
        <TableView fx:id="itemsTable" prefHeight="300.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="itemNameColumn" minWidth="250.0" prefWidth="300.0" text="%abandonorder.column.itemName" />
                <TableColumn fx:id="itemQuantityColumn" minWidth="80.0" prefWidth="100.0" text="%abandonorder.column.quantity" styleClass="table-column-center"/>
                <TableColumn fx:id="restockItemColumn" minWidth="100.0" prefWidth="120.0" text="%abandonorder.column.restockItem" styleClass="table-column-center"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="15.0" />
            </BorderPane.margin>
            <Button fx:id="confirmButton" minWidth="180.0" mnemonicParsing="false" onAction="#handleConfirmAbandonmentButtonAction" text="%abandonorder.button.confirm" styleClass="danger-button" />
            <Button fx:id="cancelButton" minWidth="100.0" mnemonicParsing="false" onAction="#handleCancelButtonAction" text="%dialog.button.cancel" styleClass="secondary-button"/>
        </HBox>
    </bottom>
</BorderPane>
